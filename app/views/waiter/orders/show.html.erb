<% content_for :navbar do %>
  <%= render 'shared/navbar_barname' %>
<% end %>

<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-3">
      <div class="page-header">
        <h1 class="text-center">Order overview <small><%= @bar.name %></small></h1>
      </div>
      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th>Drink name</th>

            <th>Quantity</th>

          </tr>
        </thead>
        <tbody>
          <% @order.order_lines.each do |line| %>
          <tr>
            <td><%= line.drink.name %></td>
            <td><%= line.quantity %></td>
          </tr>
          <% end %>
          <tr class="danger">
            <td>TOTAL: <%= @order.total_order %> â‚¬</td>

            <td></td>
            <td><%= pluralize(@order.number_of_items_per_order, "Item") %></td>
            <td></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>

<%= render 'shared/order_done' %>
<%= render 'shared/order_incharge' %>


